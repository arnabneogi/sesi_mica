}

// implements hook_entity_delete
function query_subscription_entity_delete($entity, $type) {
  if($type !== 'mica_query') return;

  $notify_state = QuerySubscription::getForQuery($entity);
  if($notify_state) {
    $notify_state->delete();
  }
}


